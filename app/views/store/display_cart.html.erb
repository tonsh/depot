<% content_for :title, "My Shop Cart" %>

<div class="container-fluid">
  <div class="row-sluid">
    <div class="span9">
      <table class="table table-striped table-bordered table-condensed">
        <thead class="vertical-align:middle">
          <tr>
            <th rowspan="2">Product</th>
            <th rowspan="2">Qty</th>
            <th colspan="2">Price</th>
          </tr>
          <tr>
            <th>Uniq</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
        <% if @items.empty? %>
          <tr>
            <td colspan="4">
              <div class="alert alert-info">No products in your card!</div>
            </td>
          </tr>
        <% else %>
          <% @items.each do |itemId, item| %>
            <tr>
              <td><%= item.product.title %></td>
              <td><%= item.quantity %></td>
              <td><%= fmt_dollar(item.unit_price) %></td>
              <td><%= fmt_dollar(item.quantity * item.unit_price) %></td>
            </tr>
          <% end %>
        <% end %>
          <tr>
            <td colspan="3" align="right"><h3>Total:</h3></td>
            <td><%= fmt_dollar(@cart.total_price) %>
          </tr>
        </tbody>
      </table>
    </div>
  
    <div class="span3">
      <ul>
        <li><%= link_to 'Continue Shopping', :action => "index" %></li>
        <li><%= link_to 'Empty cart', :action => "empty_cart" %></li>
        <li><%= link_to 'Checkout', :action => "checkout" %></li>
      </ul>
    </div>
  </div>
</div>
